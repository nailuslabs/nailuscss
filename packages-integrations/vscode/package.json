{
  "name": "nailuscss-intellisense",
  "description": "Intelligent nailusCSS tooling for VS Code",
  "version": "1.0.0",
  "activationEvents": [
    "onStartupFinished"
  ],
  "bugs": "https://github.com/nailuscss/nailuscss-intellisense/issues",
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "nailuscss.interpret",
        "category": "nailus CSS",
        "title": "Compile CSS [Interpretation Mode]"
      },
      {
        "command": "nailuscss.compile",
        "category": "nailus CSS",
        "title": "Compile CSS [Compilation Mode]"
      },
      {
        "command": "nailuscss.sort",
        "category": "nailus CSS",
        "title": "Sort Utilities"
      },
      {
        "command": "nailuscss.toggle-folding",
        "category": "nailus CSS",
        "title": "Toggle Code Folding"
      },
      {
        "command": "nailuscss.toggle-decorators",
        "category": "nailus CSS",
        "title": "Toggle Color Decorators"
      },
      {
        "command": "nailuscss.toggle-preview",
        "category": "nailus CSS",
        "title": "Toggle Hover Preview"
      },
      {
        "command": "nailuscss.toggle-completion",
        "category": "nailus CSS",
        "title": "Enable/Disable All Code Completion"
      },
      {
        "command": "nailuscss.toggle-dynamic-completion",
        "category": "nailus CSS",
        "title": "Toggle Dynamic Utilities Completion"
      },
      {
        "command": "nailuscss.run-analysis",
        "category": "nailus CSS",
        "title": "Run & Open Analysis"
      }
    ],
    "languages": [
      {
        "id": "nailus",
        "aliases": [
          "nailus",
          "nailus"
        ],
        "extensions": [
          ".nailus"
        ],
        "mimetypes": [
          "text/x-nailus",
          "text/nailus"
        ],
        "configuration": "./syntax/lang.config.json"
      }
    ],
    "grammars": [
      {
        "injectTo": [
          "source.html",
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "source.vue",
          "source.css",
          "source.svelte",
          "text.html"
        ],
        "scopeName": "source.nailus.scope",
        "path": "./syntax/nailus.scope.json"
      },
      {
        "injectTo": [
          "source.html",
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "source.vue",
          "source.svelte",
          "text.html"
        ],
        "scopeName": "source.nailus.attr",
        "path": "./syntax/nailus.attr.json"
      },
      {
        "language": "nailus",
        "scopeName": "source.nailus",
        "path": "./syntax/nailus.lang.json",
        "tokenTypes": {
          "meta.function.url string.quoted": "other"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "nailusCSS IntelliSense",
      "properties": {
        "nailuscss.enableColorDecorators": {
          "type": "boolean",
          "default": true,
          "description": "Enable Color Decorators."
        },
        "nailuscss.enableHoverPreview": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover className to show preview of CSS."
        },
        "nailuscss.enableCodeCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable all code completions."
        },
        "nailuscss.enableUtilityCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable Utility Completion."
        },
        "nailuscss.enableVariantCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable Variant Completion."
        },
        "nailuscss.enableAttrUtilityCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable Utility Completion For Attributify Mode."
        },
        "nailuscss.enableAttrVariantCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable Variant Completion For Attributify Mode."
        },
        "nailuscss.enableDynamicCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable Dynamic Utilities Completion like p-{int}."
        },
        "nailuscss.enableBracketCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable Square Bracket Utilities Completion like bg-[#ff0]."
        },
        "nailuscss.enableEmmetCompletion": {
          "type": "boolean",
          "default": false,
          "description": "Enable . trigger for emmet."
        },
        "nailuscss.enableRemToPxPreview": {
          "type": "boolean",
          "default": true,
          "description": "Enable rem to px preview."
        },
        "nailuscss.rootFontSize": {
          "type": "number",
          "default": 16,
          "description": "Used to convert rem CSS values to their px equivalents."
        },
        "nailuscss.enableCodeFolding": {
          "type": "boolean",
          "default": false,
          "description": "Enable ClassNames Code Folding."
        },
        "nailuscss.colorDecoratorsType": {
          "type": "string",
          "default": "cube",
          "description": "Configure the type of color decorations, optional ['border', 'bg', 'cube', 'picker'], default is 'cube'."
        },
        "nailuscss.foldCount": {
          "type": "number",
          "default": 3,
          "description": "Used by foldByCount."
        },
        "nailuscss.foldByLength": {
          "type": "boolean",
          "default": false,
          "description": "Folding code by length. Default option is false, will fold by utility count."
        },
        "nailuscss.foldLength": {
          "type": "number",
          "default": 25,
          "description": "Used by foldByLength"
        },
        "nailuscss.hiddenText": {
          "type": "string",
          "default": "...",
          "description": "Placeholder used when folding code."
        },
        "nailuscss.hiddenTextColor": {
          "type": "string",
          "default": "#AED0A4",
          "description": "Placeholder Color"
        },
        "nailuscss.sortOnSave": {
          "type": "boolean",
          "default": false,
          "description": "A flag that controls whether or not nailus CSS classes will be sorted on save."
        },
        "nailuscss.includeLanguages": {
          "type": "object",
          "default": {},
          "description": "Add additional file types, if it already exist, it will be merged."
        }
      }
    },
    "snippets": [
      {
        "language": "nailus",
        "path": "./snippets/nailus.code-snippets"
      }
    ]
  },
  "devDependencies": {
    "@nailuscss/core": "workspace:*",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/glob": "9.0.0",
    "@types/jest": "30.0.0",
    "@types/mocha": "10.0.10",
    "@types/node": "^25.0.9",
    "@types/vscode": "1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "bumpp": "^10.4.0",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.0",
    "eslint-plugin-jest": "29.0.1",
    "jest": "30.0.5",
    "jiti": "2.1.2",
    "ncp": "2.0.0",
    "rimraf": "6.0.1",
    "rollup": "^4.57.1",
    "ts-jest": "29.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "nailuscss": "workspace:*",
    "windicss-analysis": "0.3.5",
    "unconfig": "7.3.3"
  },
  "displayName": "nailusCSS IntelliSense",
  "engines": {
    "vscode": ">=1.63.0"
  },
  "homepage": "https://github.com/nailuscss/nailuscss-intellisense",
  "icon": "res/logo.png",
  "keywords": [
    "autocomplete",
    "css",
    "intellisense",
    "tailwind",
    "tailwindcss",
    "vscode",
    "nailus",
    "nailuscss"
  ],
  "license": "MIT",
  "main": "./out/extension.js",
  "publisher": "voorjaar",
  "repository": {
    "type": "git",
    "url": "https://github.com/nailuscss/nailuscss-intellisense"
  },
  "scripts": {
    "build": "rimraf out && cross-env NODE_ENV=production rollup -c && ncp node_modules/windicss-analysis/dist/app out/analyzer",
    "lint": "eslint src --ext ts",
    "lint:fix": "npm run lint -- --fix",
    "release": "bumpp --tag --commit --push",
    "test": "jest",
    "test:update": "jest -u",
    "watch": "rollup -cw"
  },
  "volta": {
    "node": "16.14.2"
  },
  "dependencies": {}
}
