{
  "scopeName": "source.nailus.scope",
  "injectionSelector": "meta.property-list.css, meta.at-rule.body.css, meta.property-list.scss",
  "patterns": [
    { "include": "#apply" },
    { "include": "#functions" }
  ],
  "repository": {
    "apply": {
      "begin": "(?<!\/\/[^\n]*)(?<!\/\\*[\\s\\S]*)@apply\\b",
      "beginCaptures": {
        "0": {
          "name": "keyword.control.at-rule.nailus.css"
        },
        "1": {
          "name": "punctuation.definition.keyword.css"
        }
      },
      "end": ";",
      "endCaptures": {
        "0": {
          "name": "punctuation.terminator.rule.tailwind"
        }
      },
      "patterns": [
        { "match": "\\!\\s*important(?=\\s*;)", "name": "entity.name.tag.nailus" },
        {
          "match": "[!<@\\w-]+(?=:)",
          "name": "entity.name.tag.nailus"
        },
        {
          "match": "(?<=@apply\\s+[\\s\\S]*?[<@\\w-]+:)[\\w-]+",
          "name": "variable.apply.nailus"
        },
        {
          "match": "(?<=@apply\\s+[\\s\\S]*?\\s?)[\\w-]+(?=[\\s;)])",
          "name": "variable.apply.nailus"
        },
        {
          "match": "(?<=@apply\\s+[\\s\\S]*?)[*][\\w-]+",
          "name": "support.class.nailuscss"
        },
        {
          "match": "(?<=@apply\\s+[\\s\\S]*?)[!](?=[<@:*\\w-]+)",
          "name": "entity.name.tag.nailus"
        }
      ]
    },
    "functions": {
      "begin": "(?i)(?<![\\w-])(config|theme)(\\()",
      "beginCaptures": {
        "1": {
          "name": "support.function.config.nailus"
        },
        "2": {
          "name": "punctuation.section.function.begin.bracket.round.nailus"
        }
      },
      "end": "\\)",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.function.end.bracket.round.nailus"
        }
      },
      "patterns": [
        {
          "include": "source.css#property-values"
        }
      ]
    }
  }
}
